  <num>KL-CY-2023-003</num>
  <heading>Kiowa Tribe Newsletter Publishing Act of 2023</heading>
  <meta>
    <effective>2023-01-19</effective>
    <history>
      <adopted>2023-01-14</adopted>
    </history>
